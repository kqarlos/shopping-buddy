<!-- add to cart -->
<div class="col-5 my-2">
    <div class="row">
        <div class="col-12 display-4 my-2 py-3 rounded bg-dark text-center text-white">
            <i class="fas fa-clipboard-list text-success"></i> List</div>
    </div>

    {{!-- if the item is not done, put in shopping list --}}
    {{#each list}}
    {{#if done}}

    {{else}}
    <div class="row">
        <div class="col-12 my-2 rounded-pill py-3 bg-secondary">
            <button type="button" class="btn btn-success float-right cart" data-id={{id}}>
                <i class="fas fa-check"></i> Add to cart</button>
            <h2 class="h2 text-center">{{item}}</h2>
        </div>
    </div>
    {{/if}}
    {{/each}}

</div>
